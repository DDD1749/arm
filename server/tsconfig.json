{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                  // <-- тут NodeNext
    "moduleResolution": "NodeNext",         // <-- тут NodeNext
    "moduleDetection": "force",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

